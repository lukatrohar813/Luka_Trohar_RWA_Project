@model ICollection<MVC.Models.SkillVM>

<table id="tblSkills" class="table">
	<thead>
	<tr>
		<th>@Html.DisplayNameFor(model => model.First().Name)</th>
		<th>@Html.DisplayNameFor(model => model.First().Description)</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var skill in Model)
	{
		<tr>
			<td>@Html.DisplayFor(modelItem => skill.Name)</td>
			<td>@Html.DisplayFor(modelItem => skill.Description)</td>
			<td colspan="2" class="text-end">
				<div class="w-25 btn-group" role="group">
					<button type="button" class="btn btn-success mx-2 edit-button" data-id="@skill.Id">
						<i class="bi bi-pencil-square"></i>
						Edit
					</button>
					<button type="button" class="btn btn-danger mx-2 delete-button" data-id="@skill.Id">
						<i class="bi bi-trash3"></i>
						Delete
					</button>
				</div>
			</td>
		</tr>
	}
	</tbody>
</table>
