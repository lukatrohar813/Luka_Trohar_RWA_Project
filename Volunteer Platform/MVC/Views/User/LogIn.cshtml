@model BL.Models.UserLoginDto

@{
	ViewData["Title"] = "Log in";

}
@if (ViewData["wrongLoginInfo"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData["wrongLoginInfo"]
	</div>
}
<div class="container">
	<form method="post" asp-action="LogIn" asp-controller="User">

		<div class="border-2 mt-4">
			<div class="row mb-2">
				<h2 class="text-primary">Log In</h2>
				<hr />
			</div>
			<div class="row">

				<div class="col-md-12 mb-3">
					<label asp-for="Username" class="form-label"></label>
					<input id="Username" asp-for="Username" class="form-control border border-1 border-dark" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="col-md-12 mb-3">
					<label asp-for="Password" class="form-label"></label>
					<input id="Password" type="password" asp-for="Password" class="form-control border border-1 border-dark" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="col-md-12 mb-3">
					<label asp-for="ConfirmPassword" class="form-label"></label>
					<input id="ConfirmPassword" type="password" asp-for="ConfirmPassword" class="form-control border border-1 border-dark" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="col-md-12 mb-3">
					<p class="text-primary">
						New user? <a asp-controller="User" asp-action="Registration" class="text-info">Register</a>
					</p>
				</div>
				<div class="col-md-12 mb-3">
					<button type="submit" class="btn btn-dark btn-custom">Log In</button>
					<a asp-controller="Home" asp-action="Index" class="btn btn-light btn-custom">Back</a>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}