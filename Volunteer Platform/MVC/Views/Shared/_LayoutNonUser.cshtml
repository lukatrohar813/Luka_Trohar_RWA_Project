<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
</head>
<body>
	<input type="hidden" id="toast-message" value="@TempData["ToastMessage"]" />
	<input type="hidden" id="toast-type" value="@TempData["ToastType"]" />
	<header>
		<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 w-100">
			<div class="container-fluid">
				<div class="d-flex justify-content-between w-100">
					<div class="d-flex">
						<a class="btn btn-outline-secondary register-btn ms-2" asp-controller="Project" asp-action="List">Projects</a>
					</div>


					<div id="messageContainer" class="d-flex align-items-center">
						<span id="userMessage" class="me-2">Account has not yet been approved ,functionalities are limited.</span>
					</div>

					<div class="d-flex">
						@{
							var userName = this.ViewContext.HttpContext.User?.Identity.Name ?? "(user not logged in)";
						}
				
						<a class="btn btn-outline-secondary register-btn ms-2" asp-controller="User" asp-action="ProfileDetails">@userName</a>
						<button class="btn btn-outline-secondary logout-btn" onclick="document.getElementById('logoutForm').submit();">Logout</button>
						<form id="logoutForm" asp-controller="User" asp-action="Logout" method="post" style="display:none;"></form>
					</div>
				</div>
			</div>
		</nav>
	</header>


<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>
<footer class="border-top footer text-muted">
	<div class="container">
		&copy; 2024 - MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/toast.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<script>
      
    </script>
</body>
</html>
